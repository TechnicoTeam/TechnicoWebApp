@model Technico.Main.DTOs.OwnerDtoRequest
@{
    ViewData["Title"] = "Register";
}
<div class="card login-card col-md-6 col-lg-4 offset-md-3 offset-lg-4 shadow-lg p-4 my-5">
    <h1 class="mb-4 text-center">Add Owner</h1>
    <form asp-controller="Owner" method="post" asp-action="RegisterOwner">
        <div class="form-group mb-3">
            <label asp-for="Vat" class="form-label">VAT Number</label>
            <input type="text" class="form-control" asp-for="Vat" placeholder="VAT Number" required>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Firstname" class="form-label">First Name</label>
            <input type="text" class="form-control" asp-for="Firstname" placeholder="First Name" required>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Lastname" class="form-label">Last Name</label>
            <input type="text" class="form-control" asp-for="Lastname" placeholder="Last Name" required>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Address" class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address" placeholder="Address">
        </div>

        <div class="form-group mb-3">
            <label asp-for="Phone" class="form-label">Phone Number</label>
            <input type="tel" id="phone-number" maxlength="10" class="form-control" asp-for="Phone" placeholder="Phone Number" required pattern="[0-9]{10}">
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="Email" required>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" asp-for="Password" placeholder="Password" required>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Role" class="form-label">Role</label>
            <input type="text" class="form-control" asp-for="Role" placeholder="Role" required>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary px-4 me-2">Create</button>
            <a asp-controller="Owner" asp-action="AdminView" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>


<style>

    .login-card {
        padding: 40px;
        background-color: #fff;
        border-radius: 8px;
    }

</style>

<script>
    document.getElementById('phone-number').addEventListener('input', function (event) {
        // Replace any non-numeric characters
        this.value = this.value.replace(/[^0-9]/g, '');
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}