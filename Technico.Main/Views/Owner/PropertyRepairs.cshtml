@model Technico.Main.Models.PropertyRepairsViewModel
@using Technico.Main.DTOs.PropertyDtos;
@using Technico.Main.DTOs.RepairDtos;
@using Technico.Main.Models.Enums;

@{
    ViewData["Title"] = "Repairs";
}

<div class="container col-sm-8">
    <div class="card shadow-sm my-4">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fa-solid fa-house-crack"></i> Property
            </h3>
        </div>
        <div class="card-body">
            <div class="row justify-content-between p-4">

                <div class="row col-lg-5 justify-content-center mb-3 shadow-sm">
                    <div class="my-auto">
                        <img src="~/imgs/b3d46e87-698a-4867-9e99-38b5d1cbadfb.png" alt="Technico Logo" style="width:100%; height:auto;" />
                    </div>
                </div>

                <div class="row justify-content-center col-lg-7">

                        <div class="mb-3 row">
                            <h6 for="e9" class="col-sm-6">E9:</h6>
                            <span class="col-sm-6 text-end" id="e9">@Model.Property.E9</span>
                        </div>

                        <div class="mb-3 row">
                            <h6 class="col-sm-6 col">Address:</h6>
                            <span class="col-sm-6 text-end">@Model.Property.Address</span>
                        </div>
                        <div class="mb-3 row">
                            <h6 class="col-sm-6 col">Type:</h6>
                            <span class="col-sm-6 text-end">@Model.Property.Type</span>
                        </div>
                        <div class="mb-3 row">
                            <h6 class="col-sm-6 col">Construction Year:</h6>
                            <span class="col-sm-6 text-end">@Model.Property.ConstructionYear</span>
                        </div>
                        <div class="mb-3 row">
                            <h6 class="col-sm-6 col">Owners:</h6>
                        @foreach(var owner in Model.Property.Owners)
                        {
                            <span class="col-sm-6 text-end">@owner.Lastname @owner.Firstname</span>
                        }
                        </div>

                </div>

            </div>
            
        </div>
    </div>

   

    <div class="d-flex justify-content-between mt-5 px-4">
        <h3 class="card-title mb-0">
            <i class="fa-sharp fa-solid fa-hammer"></i> Repairs
        </h3>

        <button class="btn btn-primary" onclick="">Add Repair</button>
    </div>

    
    <form class="mb-3 px-5">
        <hr />
        
        <div class="d-grid gap-4 d-md-flex justify-content-between mb-3">
            <div style="width:60px;" class="my-auto">
                <h6><i class="fa-solid fa-filter"></i> Filter</h6>
            </div>
            
            <div class="col-md-4">
                <select class="form-select" name="Type" id="Type">
                    <option selected hidden>Choose Type </option>
                    <option value="@TypeOfRepair.Plumbing">@TypeOfRepair.Plumbing</option>
                    <option value="@TypeOfRepair.Painting">@TypeOfRepair.Painting</option>
                    <option value="@TypeOfRepair.Electrical_Work">@TypeOfRepair.Electrical_Work</option>
                    <option value="@TypeOfRepair.Frames">@TypeOfRepair.Frames</option>
                    <option values="@TypeOfRepair.Insulation">@TypeOfRepair.Insulation</option>
                </select>
            </div>

            <div class="col-md-4">
                <select class="form-select" name="Status" id="Status">
                    <option selected hidden>Choose Status </option>
                    <option value="@StatusOfRepair.Pending">@StatusOfRepair.Pending</option>
                    <option value="@StatusOfRepair.In_progress">@StatusOfRepair.In_progress</option>
                    <option value="@StatusOfRepair.Complete">@StatusOfRepair.Complete</option>
                </select>
            </div>

        </div>
        <hr />
    </form>
   

    <div class="table-responsive my-4 px-4">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark sticky-top">
                <tr class="text-center">
                    <th class="align-middle">Type</th>
                    <th class="align-middle">Status</th>
                    <th class="align-middle">Cost</th>
                    <th class="align-middle">Created_at</th>
                    <th class="align-middle">Actions</th>
                </tr>
            </thead>
            <tbody class="table-light" id="RepairTableBody">
                @if (!Model.Repairs.Any())
                {
                    <tr class="repairs-row">
                        The are not any repair for this property.
                    </tr>
                }
                else
                {
                    @foreach (var r in Model.Repairs)
                    {
                        <tr class="repairs-row">
                            <td class="align-middle">@r.Type</td>
                            <td class="align-middle">@r.Status</td>
                            <td class="align-middle">@r.Cost</td>
                            <td class="align-middle">@r.CreatedAt</td>
                            <td class="text-center align-middle">

                                <div class="btn-group" role="group">
                                    <button class="btn btn-outline-primary btn-sm me-2 rounded-pill" data-bs-toggle="tooltip" title="Edit Repair">
                                        <i class="fas fa-cog"></i>
                                    </button>

                                    <button class="btn btn-outline-danger btn-sm" data-bs-toggle="tooltip" title="Delete Repair">
                                        <i class="fas fa-trash"></i>
                                    </button>

                                </div>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
     </div>
</div>

