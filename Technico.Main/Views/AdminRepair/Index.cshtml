@model RepairsViewModel
@using Technico.Main.Models.Enums
@using Technico.Main.DTOs.RepairDtos
@using Technico.Main.DTOs


@{
    ViewData["Title"] = "Repairs";

}

<!-- Include the delete modal partial view -->

<div class="container col-md-12">


    <div class="card">
        <form class="card-body p-4" method="get" asp-action="Search">
            <div class="row mb-4">
                <div class="col-md-6 mx-auto">
                    <input type="text" class="form-control" value="" placeholder="Search by owner's VAT" name="vat" id="vat" aria-label="Search" />
                </div>
            </div>

            <hr />
            <div class="d-flex gap-4">
                <h6 class="my-auto"><i class="fa-solid fa-filter"></i> Filters</h6>

                <div class="col-3">
                    <select id="status" class="form-select" name="status">
                        <option selected hidden> Status </option>
                        <option value="Pending">Pending</option>
                        <option value="In_progress">In Progress</option>
                        <option value="Complete">Complete</option>
                    </select>
                </div>

                <div class="col-3">
                    <input type="date" class="form-control" name="fromDate" id="fromDate" />
                </div>
                <div class="col-3">
                    <input type="date" class="form-control" name="toDate" id="toDate" />
                </div>
            </div>
            <hr />

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-magnifying-glass"></i> Search
                </button>
            </div>
        </form>

    </div>

    <div class="card shadow-sm my-4">
        <div class="card-header d-flex text-white bg-primary justify-content-between mb-3">
            <h3 class="card-title"><i class="fa-sharp fa-solid fa-hammer"></i> Repairs</h3>
            <div style="width:250px;" class="d-flex justify-content-end">
                <a class="btn btn-primary" asp-action="Create">Create new Repair</a>
            </div>
        </div>
        <div class="card-body p-4 ">

            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered align-middle">
                    <thead class="table-dark sticky-top">
                        <tr class="text-center">
                            <th class="align-middle">Vat</th>
                            <th class="align-middle">E9</th>
                            <th class="align-middle">Type</th>
                            <th class="align-middle">Status</th>
                            <th class="align-middle">Cost</th>
                            <th class="align-middle">Date</th>
                            <th class="align-middle">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-light" id="RepairTableBody">
                        @if (!Model.Repairs.Any())
                        {
                            <tr class="repairs-row">
                                The are not any repair for this property.
                            </tr>
                        }
                        else
                        {
                            @foreach (var r in Model.Repairs)
                            {
                                <tr class="repairs-row">
                                    <td>
                                        @foreach (var owner in r.Property.Owners)
                                        {
                                            @owner.Vat

                                            <br />
                                        }
                                    </td>
                                    <td>@r.Property.E9</td>
                                    <td class="align-middle">@r.Type.ToString().Replace("_", " ")</td>
                                    <td class="align-middle">
                                        @* Inline Razor conditions for badge styling *@
                                        <span class="badge
                                            @(r.Status == StatusOfRepair.Pending ? "bg-warning text-dark" :
                                              r.Status == StatusOfRepair.Complete ? "bg-success" :
                                              r.Status == StatusOfRepair.In_progress ? "bg-info text-dark" :"bg-secondary")">
                                            @r.Status.ToString().Replace("_", " ")
                                        </span>
                                    </td>
                                    <td class="align-middle">@r.Cost</td>
                                    <td class="align-middle">@r.CreatedAt.ToString("dd-MM-yyyy")</td>
                                    <td class="text-center align-middle">
                                        <div class="btn-group" role="group">

                                            <a asp-action="UpdateForm" asp-route-id="@r.Id" class="btn btn-outline-primary btn-sm me-2 rounded-pill" data-bs-toggle="tooltip" title="Edit Property">
                                                <i class="fas fa-cog"></i>
                                            </a>

                                            <a asp-action="DeleteForm" asp-route-id="@r.Id" class="btn btn-outline-danger btn-sm" data-bs-toggle="tooltip" title="Delete Property"
                                               onclick="return confirmDelete();">
                                                <i class="fas fa-trash"></i>
                                            </a>

                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>


        </div>
    </div>

</div>






