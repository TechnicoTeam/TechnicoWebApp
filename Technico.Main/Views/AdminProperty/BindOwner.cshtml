@model PropertyOwnerBindingModel;

@{
    ViewData["Title"] = "Bind Owner to Property";
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="card-title mb-0">
                <i class="fas fa-user-plus me-2"></i>Bind Owner to Property
            </h3>
        </div>
        <div class="card-body p-4">
            <div class="row mb-4">
                <div class="col">
                    <a onclick="history.back()" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Back
                    </a>
                </div>
            </div>

            <form asp-action="BindOwner" method="post">
                <input type="hidden" asp-for="PropertyId" />
                
                <div class="mb-4">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="vat" asp-for="OwnerVat" 
                               placeholder="Enter VAT number">
                        <label for="vat">Owner VAT Number</label>
                        <span asp-validation-for="OwnerVat" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Bind Owner
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}