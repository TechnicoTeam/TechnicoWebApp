@{
    ViewData["Title"] = "400 - Bad Request";
}

<div class="container d-flex flex-column align-items-center justify-content-center vh-100">
    <div class="text-center">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger mb-4">
                <i class="fas fa-exclamation-circle me-2"></i>
                @TempData["ErrorMessage"]
            </div>
        }
        else
        {
            <h2 class="text-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                This Vat was not found. Please try again with another Vat.
            </h2>
        }

        <button onclick="history.back()" class="btn btn-secondary btn-lg me-2">
            <i class="fas fa-arrow-left me-2"></i> Back to Create
        </button>

    </div>
</div>

<!-- Optional: Font Awesome CDN for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">