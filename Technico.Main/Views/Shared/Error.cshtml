@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <!-- Error Icon or Image -->
            <div class="mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="text-danger bi bi-exclamation-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                    <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z" />
                </svg>
            </div>

            <!-- Error Message -->
            <h1 class="display-4 text-danger mb-4">Oops!</h1>
            <h2 class="h4 text-muted mb-4">Something went wrong while processing your request.</h2>

            @if (Model.ShowRequestId)
            {
                <div class="alert alert-light d-inline-block">
                    <small class="text-muted">
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </small>
                </div>
            }

            <!-- Action Buttons -->
            <div class="mt-5">
                <a href="javascript:history.back()" class="btn btn-outline-secondary me-2">
                    <i class="bi bi-arrow-left"></i> Go Back
                </a>
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house"></i> Back to Home
                </a>
            </div>

            <!-- Additional Help -->
            <div class="mt-5 text-muted">
                <hr class="my-4">
                <p class="small">
                    If you continue to experience issues, please contact our support team.
                </p>
            </div>
        </div>
    </div>
</div>

@if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
{
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark">
                        <i class="bi bi-gear-fill"></i> Development Mode
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <small>
                                Detailed error information is only displayed in Development environment.
                                Consider switching to <strong>Production</strong> environment for deployed applications
                                to prevent sensitive information from being displayed.
                            </small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}