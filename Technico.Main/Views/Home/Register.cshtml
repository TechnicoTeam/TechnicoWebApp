@model Technico.Main.DTOs.OwnerDtoRequest
@{
    ViewData["Title"] = "Register";
}
<div class="login-card col-4 offset-4">
    <h1 class="mb-3 text-center">Register Menu</h1>
    <form asp-controller="Owner" method="post" asp-action="Register">
        <div class="form-group pb-3">
            <input type="text" class="form-control" asp-for="Vat" placeholder="VAT Number" required>
        </div>
        <div class="form-group pb-3">
            <input type="text" class="form-control" asp-for="Firstname" placeholder="First Name" required>
        </div>
        <div class="form-group pb-3">
            <input type="text" class="form-control" asp-for="Lastname" placeholder="Last Name" required>
        </div>
        <div class="form-group pb-3">
            <input type="text" class="form-control" asp-for="Address" placeholder="Address" required>
        </div>
        <div class="form-group pb-3">
            <input type="tel" id="phone-number" maxlength="10" class="form-control" asp-for="Phone" placeholder="Phone Number" required pattern="[0-9]{10}" )" />
        </div>
        <div class="form-group pb-3">
            <input type="email" class="form-control" asp-for="Email" placeholder="Email" required>
        </div>
        <div class="form-group pb-3">
            <input type="password" class="form-control" asp-for="Password" placeholder="Password" required>
        </div>
        <div class="form-group pb-3">
            <input type="test" class="form-control" asp-for="Role" placeholder="Role" required>
        </div>
            <button type="submit" class="btn btn-primary pt-3 pb-3 col-4 offset-4">Sign Up</button>
            <a class="nav-link text-dark text-center text-decoration-underline mt-4" asp-area="" asp-controller="Home" asp-action="LogIn">Are you registered?</a>
    </form>
</div>

<style>

    .login-card {
        padding: 40px;
        background-color: #fff;
        border-radius: 8px;
    }

</style>

<script>
    document.getElementById('phone-number').addEventListener('input', function (event) {
        // Replace any non-numeric characters
        this.value = this.value.replace(/[^0-9]/g, '');
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}